<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_add_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_add_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Book Cover -->
        <ImageView
            android:id="@+id/image_view_cover"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:contentDescription="Book Cover"
            android:src="@drawable/ic_book_placeholder"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <!-- Title Input -->
        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text" />

        <!-- Author Input -->
        <EditText
            android:id="@+id/edit_text_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Author"
            android:inputType="text" />

        <!-- Total Pages Input -->
        <EditText
            android:id="@+id/edit_text_total_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Pages"
            android:inputType="number" />

        <!-- Pages Read Input -->
        <EditText
            android:id="@+id/edit_text_pages_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pages Read"
            android:inputType="number" />

        <!-- Save Button -->
        <Button
            android:id="@+id/button_save_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Book"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>